<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TravelUp</title>
    <link rel="icon" type="image/x-icon" href="assets/favicons/favicon.ico">
    <link rel="icon" type="image/png" sizes="32x32" href="assets/favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="assets/favicons/favicon-16x16.png">
    <link rel="apple-touch-icon" sizes="180x180" href="assets/favicons/apple-touch-icon.png">
    <link rel="manifest" href="assets/favicons/site.webmanifest">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/3.0.0-beta.6/aos.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">

    <link rel="stylesheet" href="/css/style.css">

</head>

<body>

    <!-- inizio sezione header -->

    <header>

        <div class="container">

            <a class="navbar-brand logo" href="/">
                <img src="/assets/images/logoleft.png" style="max-width: 175px; height: auto;" alt="">
            </a>

            <nav class="nav">
                <ul>
                    <li><a href="/logout">Esci</a></li>
                </ul>
            </nav>

            <div class="fas fa-bars"></div>

        </div>

    </header>

    <!-- fine sezione header -->

    <!-- inizio sezione home -->

    <section class="home" id="home">

        <div class="container">

            <div class="row min-vh-100 align-items-center text-center text-md-left">

                <div class="col-md-6 pr-md-5" data-aos="fade-right">
                    <img class="imgRound" src="/assets/images/itinerari.svg" width="100%" alt="">
                </div>
                <div class="col-md-6 pl-md-5 content" data-aos="fade-left">
                    <div class="container"><img class="imgRound" src="<%= user.photos[0].value %>" width="25%" alt="">
                    </div>
                    <h1>Benvenuto, <span>
                            <%= user.name.givenName %>
                        </span><span></span>
                    </h1>
                    <% if (itin.length>0) { %>
                        <a href="#itin"><button class="button">I tuoi itinerari</button></a>
                        <% } else { %>
                            <h3>Non hai ancora creato alcun itinerario</h3>
                            <% } %>
                                <a href="/itinerari/nuovo"><button class="button">Crea nuovo</button></a>
                </div>

            </div>

        </div>

    </section>

    <!-- fine sezione home -->

    <!-- inizio sezione itinerari -->

    <section class="itin" id="itin">

        <div class="container min-vh-100">

            <h1 class="heading" data-aos="fade-up"><span></span> I tuoi itinerari <span></span></h1>

            <% if (itin.length>0) { %>
                <h2 class="heading-description text-center" data-aos="fade-up">Tutti gli itinerari
                    creati finora!</h2>
                <% } else { %>
                    <h2 class="heading-description text-center" data-aos="fade-up">Non hai ancora creato alcun
                        itinerario</h2>
                    <% } %>

                        <div class="box-container">

                            <% if (itin.length>0) { %>
                                <% itin.forEach(function(itinerario) { %>

                                    <div class="box" data-aos="fade-up">
                                        <img src="<%= itinerario.foto %>" alt="">
                                        <div class="content">
                                            <span>
                                                <%= itinerario.dataInizio %> -> <%= itinerario.dataFine %>
                                            </span>
                                            <a href="">
                                                <h3>
                                                    <%= itinerario.citta %>
                                                </h3>
                                            </a>
                                            <p>
                                                <%= itinerario.descrizione %>
                                            </p>
                                            <a target=”_blank” href="/itinerari/<%= itinerario._id %>"><button
                                                    class="button">Visualizza</button></a>
                                            <a href="/itinerari/<%= itinerario._id %>/modifica"><button
                                                    class="button">Modifica</button></a>
                                            <p>Attenzione! Non ti verrà chiesta conferma! Premi il bottone rosso solo se sei sicuro!</p>
                                            <a href="/itinerari/<%= itinerario._id %>/elimina"><button
                                                    class="buttonRed">Elimina</button></a>
                                        </div>
                                    </div>
                                    <% }); %>
                                        <% } else { %>
                                            <a href="/itinerari/nuovo" data-aos="fade-up"><button class="button">Crea
                                                    nuovo</button></a>
                                            <% } %>

                        </div>

        </div>

    </section>

    <!-- fine sezione itinerari -->

    <!-- inizio sezione footer  -->

    <section class="footer">

        <h1 class="credit text-center mx-auto homecredit">© Copyright 2022 TravelUp
            ®<span></span><br>Tutti i diritti riservati.<br><a
                href="https://github.com/TUEngineers/TravelUp">github.com/TUEngineers/TravelUp</a></h1>

    </section>

    <!-- fine sezione footer -->

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/3.0.0-beta.6/aos.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>

    <script src="/js/main.js"></script>

</body>

</html>